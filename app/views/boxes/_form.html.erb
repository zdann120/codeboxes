<%= simple_form_for(@box) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :privacy_level, as: :select, collection: ['locked', 'unlisted', 'open'] %>
    <%= f.input :box_language, as: :select, collection: @languages %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
